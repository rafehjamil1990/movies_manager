<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Movie Reviews</h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Movie Reviews</h3>
    </div>

    <div class="card-body p-0">
      <table class="table table-striped projects">
        <thead>
          <tr>
            <th style="width: 20%">
              Movie Name
            </th>
            <th style="width: 20%">
              User
            </th>
            <th style="width: 10%" class="text-center">
              Stars
            </th>
            <th style="width: 50%">
              Review
            </th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <%= review.movie.name %>
              </td>
              <td>
                <%= review.user %>
              </td>
              <td class="text-center">
                <%= review.stars %>
              </td>
              <td>
                <%= review.review %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</section>
